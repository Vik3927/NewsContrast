{
    "manifest_version": 3,
    "name": "NewsContrast Summary",
    "version": "1.0",
    "description": "Fetch and summarize news convergence/divergence across sources.",
    "permissions": ["activeTab"],
    "host_permissions": ["http://localhost:8000/*"],
    "action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
      }
    }
  }